<h1>New Image</h1>
<%= form_with scope: :image, url: images_path, local: true do |form| %>

  <p>
    <%= form.label :url %>
    <%= form.text_field :url %>
    <% if @image.errors.any? %>
      <% @image.errors[:url].each do |msg| %>
        <p class='error'><%= msg %></p>
      <% end %>

    <% end %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
<%= link_to 'Back', images_path %>
